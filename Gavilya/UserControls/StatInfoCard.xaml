<UserControl x:Class="Gavilya.UserControls.StatInfoCard" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:local="clr-namespace:Gavilya.UserControls" FontFamily="..\Fonts\#Hauora" mc:Ignorable="d" Foreground="{DynamicResource Foreground}" Height="50" d:DesignWidth="400">
	<Border x:Name="ItemBorder" CornerRadius="5" Cursor="Hand" MouseLeftButtonUp="Border_MouseLeftButtonUp" MouseEnter="ItemBorder_MouseEnter" MouseLeave="ItemBorder_MouseLeave">
		<Grid Margin="5">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="Auto" />
				<ColumnDefinition />
				<ColumnDefinition Width="Auto" />
			</Grid.ColumnDefinitions>

			<TextBlock x:Name="GamePosTxt" d:Text="#1" FontSize="16" FontWeight="ExtraBold" Foreground="#FF64648C" VerticalAlignment="Center" Margin="0,0,10,0" />
			<TextBlock Grid.Column="1" x:Name="GameNameTxt" d:Text="GameNameHere" VerticalAlignment="Center" FontWeight="ExtraBold" FontSize="16" Margin="0,0,50,0" />
			<TextBlock Grid.Column="2" x:Name="GameTimeTxt" d:Text="72,4h" VerticalAlignment="Center" FontWeight="ExtraBold" FontSize="16" Margin="0,0,5,0" />
		</Grid>
	</Border>
</UserControl>