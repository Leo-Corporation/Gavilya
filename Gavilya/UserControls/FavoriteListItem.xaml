<UserControl x:Class="Gavilya.UserControls.FavoriteListItem"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
			 xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
			 xmlns:local="clr-namespace:Gavilya.UserControls"
			 mc:Ignorable="d"
			 FontFamily="..\Fonts\#Montserrat" Foreground="#FFF"
			Height="200" Width="800">
	<Border Margin="10" Padding="10" Background="#FF141428">
		<StackPanel Orientation="Horizontal">
			<Rectangle Margin="10" RadiusX="20" RadiusY="20" Width="249" Height="140">
				<Rectangle.Fill>
					<ImageBrush x:Name="Image"/>
				</Rectangle.Fill>
			</Rectangle>
			<TextBlock x:Name="GameNameTxt" d:Text="GameName" FontSize="24" FontWeight="Bold" VerticalAlignment="Center"/>
		</StackPanel>
	</Border>
</UserControl>
