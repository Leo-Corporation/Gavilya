<UserControl x:Class="Gavilya.UserControls.AchievementItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Gavilya.UserControls"
			 FontFamily="../Fonts/#Montserrat"
			 Foreground="White"
             mc:Ignorable="d" 
             Height="75" d:DesignWidth="800" Margin="5" MaxWidth="800">
	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="Auto"/>
			<ColumnDefinition/>
		</Grid.ColumnDefinitions>

		<Image x:Name="AchievementImg" Margin="10"/>
		<StackPanel MaxWidth="800">
			<TextBlock x:Name="AchievementNameTxt" d:Text="AchievementName" FontSize="18" FontWeight="Bold"/>
			<TextBlock x:Name="AchievementDescriptionTxt" d:Text="AchievementDescription" FontSize="12" TextWrapping="Wrap"/>
		</StackPanel>
	</Grid>
</UserControl>
