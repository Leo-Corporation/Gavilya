<UserControl x:Class="Gavilya.UserControls.TagItem"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
			 xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
			 xmlns:local="clr-namespace:Gavilya.UserControls"
			 mc:Ignorable="d" Foreground="#FFF"
			 Height="22" Margin="3" FontFamily="..\Fonts\#Hauora">
	<Border x:Name="TagBorder" Padding="0" BorderThickness="2" d:BorderBrush="#10F15F" CornerRadius="10" Background="#FF141428">
		<Grid>
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="Auto" />
				<ColumnDefinition/>
			</Grid.ColumnDefinitions>
			<Rectangle x:Name="ColorDot" d:Fill="#10F15F" RadiusX="15" RadiusY="15" Margin="4 0 0 0" Height="10" Width="10"/>
			<TextBlock d:Text="TagName" Margin="10,0,10,0" x:Name="TagNameTxt" FontSize="11" FontWeight="ExtraBold" Text="" Foreground="{DynamicResource Foreground}" VerticalAlignment="Center" Grid.Column="1"/>

		</Grid>
	</Border>
</UserControl>
