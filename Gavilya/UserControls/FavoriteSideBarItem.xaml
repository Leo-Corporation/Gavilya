<UserControl x:Class="Gavilya.UserControls.FavoriteSideBarItem"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
			 xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
			 xmlns:local="clr-namespace:Gavilya.UserControls"
			 mc:Ignorable="d" 
			 Height="45" Width="45">
	<Border CornerRadius="5" Margin="2.5" Cursor="Hand" MouseLeftButtonUp="Border_MouseLeftButtonUp">
		<Border.ToolTip>
			<ToolTip Name="GameNameToolTip" Background="#000014" Foreground="White"/>
		</Border.ToolTip>

		<Border.Background>
			<ImageBrush x:Name="GameIcon" Stretch="UniformToFill">
			</ImageBrush>
		</Border.Background>
	</Border>
</UserControl>
