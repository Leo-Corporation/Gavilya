<UserControl x:Class="Gavilya.UserControls.AddControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Gavilya.UserControls"
             xmlns:lang="clr-namespace:Gavilya.Properties"
             mc:Ignorable="d" 
             Height="255" Width="170" Margin="0 10 10 0">
    <Grid>
        <Button Click="Button_Click" Cursor="Hand" Style="{DynamicResource AddButton}" Background="#FF46465C">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock Text="&#xe901;" Foreground="White" FontSize="60" FontFamily="..\Fonts\#FluentlyIcons"/>
                <TextBlock Margin="0 10 0 0" Text="{x:Static lang:Resources.Add}" Foreground="White" FontSize="18" FontWeight="Bold" TextAlignment="Center"/>
            </StackPanel>
        </Button>
    </Grid>
</UserControl>
