<UserControl x:Class="Gavilya.UserControls.ProfileItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Gavilya.UserControls"
			 Foreground="White"
			 FontFamily="../Fonts/#Montserrat"
             mc:Ignorable="d" 
             Height="70" Width="400">
	<Button x:Name="ProfileItemBtn" Background="Transparent" Style="{StaticResource RegularButton}" Click="ProfileItemBtn_Click" HorizontalContentAlignment="Left">
		<Grid Width="395">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="Auto"/>
				<ColumnDefinition Width="*"/>
				<ColumnDefinition Width="Auto"/>
				<ColumnDefinition Width="Auto"/>
			</Grid.ColumnDefinitions>
			
			<Rectangle Grid.Column="0" RadiusX="30" RadiusY="30" Width="60" Height="60">
				<Rectangle.Fill>
					<ImageBrush x:Name="ProfilePicture" ImageSource="../Assets/DefaultPP.png"/>
				</Rectangle.Fill>
			</Rectangle>
			<TextBlock d:Text="ProfileName" Grid.Column="1" x:Name="ProfileNameTxt" VerticalAlignment="Center" Margin="10,0,0,0" Foreground="White" FontWeight="Bold" FontSize="16"/>

			<Button Style="{StaticResource RegularButton}" Padding="10" Height="40" Width="40" Grid.Column="2" Content="&#xe9ef;" FontFamily="..\Fonts\#FluentlyIcons" Margin="5,0,0,0" Background="Transparent" Foreground="White" FontSize="15"/>
			<Button Style="{StaticResource RegularButton}" Padding="10" Height="40" Width="40" Grid.Column="3" Content="&#xe9cf;" FontFamily="..\Fonts\#FluentlyIcons" Margin="5,0,5,0" Background="Transparent" Foreground="White" FontSize="15"/>
		</Grid>
	</Button>
</UserControl>
