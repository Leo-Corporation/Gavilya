<Page x:Class="Gavilya.Pages.SettingsPages.SearchOptionsPage"
	  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
	  xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
	  xmlns:local="clr-namespace:Gavilya.Pages.SettingsPages"
	  xmlns:lang="clr-namespace:Gavilya.Properties"
	  mc:Ignorable="d" 
	  FontFamily="../../Fonts/#Montserrat"
	  d:DesignHeight="450" d:DesignWidth="800"
	  Title="SearchOptionsPage">

	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<RowDefinition/>
		</Grid.RowDefinitions>

		<TextBlock Grid.Row="0" Margin="10" Text="{x:Static lang:Resources.SearchF}" Foreground="White" FontSize="17" FontWeight="Bold"/>

		<StackPanel Grid.Row="1">
			<TextBlock Text="{x:Static lang:Resources.SearchBar}" FontWeight="Bold" FontSize="14" Margin="10 0 0 0" Foreground="White"/>
			<CheckBox x:Name="HideSearchBarChk" Content="{x:Static lang:Resources.HideSearchBar}" Foreground="#fff" Style="{DynamicResource CheckBoxStyle2}" FontWeight="Bold" VerticalContentAlignment="Center" BorderThickness="3" Margin="10" Checked="HideSearchBarChk_Checked" Unchecked="HideSearchBarChk_Checked"/>
		</StackPanel>
	</Grid>
</Page>
