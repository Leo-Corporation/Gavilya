<Page x:Class="Gavilya.Pages.TagPage"
	  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
	  xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
	  xmlns:local="clr-namespace:Gavilya.Pages"
	  xmlns:lang="clr-namespace:Gavilya.Properties"
	  mc:Ignorable="d" Foreground="{DynamicResource Foreground}" FontFamily="..\Fonts\#Hauora"
	  d:DesignHeight="450" d:DesignWidth="800"
	  Title="TagPage" Margin="10">

	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto" />
			<RowDefinition />
		</Grid.RowDefinitions>


		<ScrollViewer x:Name="MainContentScrollViewer" Grid.Row="1" HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto" Margin="10,10,-10,-10">
			<StackPanel x:FieldModifier="public" FlowDirection="LeftToRight" Orientation="Vertical" x:Name="SectionDisplayer" Grid.Row="1"></StackPanel>
		</ScrollViewer>
		<Grid x:FieldModifier="public" Name="WelcomeHost" Grid.Row="2" Visibility="Collapsed" AllowDrop="False"></Grid>

	</Grid>
</Page>
