<UserControl x:Class="Gavilya.Views.GamePageView"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
			 xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
			 xmlns:local="clr-namespace:Gavilya.Views" Foreground="{DynamicResource Foreground}" FontFamily="..\Fonts\#Hauora"
			 mc:Ignorable="d" xmlns:lang="clr-namespace:Gavilya.Properties"
			 d:DesignHeight="450" d:DesignWidth="800">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="225" />
			<RowDefinition Height="*" />
		</Grid.RowDefinitions>

		<Grid Grid.Row="0">
			<Grid.Background>
				<ImageBrush ImageSource="{Binding CoverFilePath}" x:Name="BackgroundImage" Stretch="UniformToFill" Opacity="0.9"></ImageBrush>
			</Grid.Background>

			<Grid Background="{DynamicResource GameCardGradient}">


				<Grid>
					<Grid.ColumnDefinitions>
						<ColumnDefinition Width="*" />
						<ColumnDefinition Width="Auto" />
					</Grid.ColumnDefinitions>

					<StackPanel Margin="0 100 0 0" VerticalAlignment="Bottom">
						<TextBlock Text="{Binding Name}" Margin="10 10 10 10" d:Text="Title" Name="GameNameTxt" Foreground="{DynamicResource Foreground}" FontSize="25" FontWeight="ExtraBold" />

						<StackPanel Orientation="Horizontal">
							<Button Cursor="Hand" Margin="10 0 5 0" Padding="18 8" x:Name="PlayBtn" Style="{StaticResource PlayButton}" FontWeight="ExtraBold" FontSize="16" Foreground="{DynamicResource HoverForeground}" HorizontalAlignment="Left" VerticalAlignment="Center" Height="37">
								<StackPanel Orientation="Horizontal">
									<TextBlock Text="&#xF610;" FontFamily="..\Fonts\#FluentSystemIcons-Filled" FontSize="15" VerticalAlignment="Center" FontWeight="Normal" />
									<TextBlock Margin="10 0 0 0" Text="{x:Static lang:Resources.Play}" FontWeight="ExtraBold" FontSize="15" VerticalAlignment="Center" />
								</StackPanel>

								<Button.ToolTip>
									<ToolTip Name="PlayBtnToolTip" Background="{DynamicResource Background}" Foreground="{DynamicResource Foreground}" />
								</Button.ToolTip>
							</Button>
							<Button x:Name="AdminBtn" HorizontalAlignment="Center" Style="{StaticResource RegularButton}" Content="&#xF8C0;" FontFamily="..\Fonts\#FluentSystemIcons-Regular" FontSize="14" FontWeight="Normal" Background="{DynamicResource Background2}" Foreground="{DynamicResource Foreground}" Width="20" Height="37" Margin="0,0,10,0">
								<Button.ToolTip>
									<ToolTip Content="{x:Static lang:Resources.LaunchGameAsAdmin}" Background="{DynamicResource Background}" Foreground="{DynamicResource Foreground}" />
								</Button.ToolTip>
							</Button>

							<StackPanel Orientation="Horizontal">
								<TextBlock Text="&#xF47F;" FontSize="30" FontFamily="..\Fonts\#FluentSystemIcons-Regular" Foreground="{DynamicResource Foreground}" VerticalAlignment="Center" />
								<StackPanel VerticalAlignment="Center">
									<TextBlock FontWeight="ExtraBold" Margin="10 0" Text="{x:Static lang:Resources.LastTimePlayed}" Foreground="{DynamicResource Foreground}" FontSize="18" />
									<TextBlock Text="{Binding LastTimePlayed}" Margin="10 0" d:Text="LastTimePlayedTxt" Name="LastTimePlayedTxt" Foreground="{DynamicResource Foreground}" FontSize="15" />
								</StackPanel>
							</StackPanel>

							<TextBlock Text="&#xF370;" FontSize="30" FontFamily="..\Fonts\#FluentSystemIcons-Regular" Foreground="{DynamicResource SelectedBackground}" VerticalAlignment="Center" Margin="10,0,20,0" />

							<StackPanel Orientation="Horizontal">
								<TextBlock Text="&#xF2DE;" FontSize="30" FontFamily="..\Fonts\#FluentSystemIcons-Regular" Foreground="{DynamicResource Foreground}" VerticalAlignment="Center" />
								<StackPanel VerticalAlignment="Center">
									<TextBlock FontWeight="ExtraBold" Margin="10 0" Text="{x:Static lang:Resources.TotalTimePlayed}" Foreground="{DynamicResource Foreground}" FontSize="18" />
									<TextBlock Text="{Binding TotalTimePlayed}" Margin="10 0" d:Text="TotalTimePlayedTxt" Name="TotalTimePlayedTxt" Foreground="{DynamicResource Foreground}" FontSize="15" />
								</StackPanel>
							</StackPanel>
						</StackPanel>
					</StackPanel>

					<StackPanel Orientation="Horizontal" Grid.Column="1" VerticalAlignment="Bottom">
						<Button x:Name="FavBtn" Margin="0,0,10,0" Style="{StaticResource RegularButton}" Padding="10.5 8 10.5 8" Content="&#xF710;" FontFamily="..\Fonts\#FluentSystemIcons-Regular" FontSize="18" FontWeight="Normal" Background="{DynamicResource Background2}" Foreground="{DynamicResource Foreground}" Height="40" Width="40">
							<Button.ToolTip>
								<ToolTip Content="{x:Static lang:Resources.FavoriteButton}" Background="{DynamicResource Background}" Foreground="{DynamicResource Foreground}" />
							</Button.ToolTip>
						</Button>

						<Button x:Name="EditBtn" Command="{Binding EditCommand}" Margin="0,0,10,0" HorizontalAlignment="Right" Style="{StaticResource RegularButton}" Padding="10.5 8 10.5 8" Content="&#xF3DE;" FontFamily="..\Fonts\#FluentSystemIcons-Regular" FontSize="18" VerticalAlignment="Stretch" FontWeight="Normal" Background="{DynamicResource Background2}" Foreground="{DynamicResource Foreground}" Width="40" Height="40">
							<Button.ToolTip>
								<ToolTip Content="{x:Static lang:Resources.EditGame}" Background="{DynamicResource Background}" Foreground="{DynamicResource Foreground}" />
							</Button.ToolTip>
						</Button>
					</StackPanel>
				</Grid>
			</Grid>
		</Grid>
	</Grid>
</UserControl>
