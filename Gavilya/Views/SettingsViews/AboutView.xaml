<UserControl
    x:Class="Gavilya.Views.SettingsViews.AboutView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:lang="clr-namespace:Gavilya.Properties"
    xmlns:local="clr-namespace:Gavilya.Views.SettingsViews"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    FontFamily="..\..\Fonts\#Hauora"
    Foreground="{DynamicResource Foreground}"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <TextBlock
            Grid.Row="0"
            Margin="10"
            FontSize="17"
            FontWeight="ExtraBold"
            Foreground="{DynamicResource Foreground}"
            Text="{x:Static lang:Resources.About}" />
        <Border
            Grid.Row="1"
            Margin="5"
            Padding="20"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Background="{DynamicResource Background2}"
            BorderBrush="{DynamicResource Accent}"
            BorderThickness="1"
            CornerRadius="5">
            <Border.Effect>
                <DropShadowEffect
                    BlurRadius="15"
                    Opacity="0.5"
                    ShadowDepth="0" />
            </Border.Effect>
            <StackPanel>
                <Image
                    Name="Logo"
                    Width="50"
                    Source="..\..\Assets\Gavilya.png" />
                <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                    <TextBlock
                        FontSize="32"
                        FontWeight="Bold"
                        Foreground="{DynamicResource Accent}"
                        Text="{x:Static lang:Resources.AppName}" />
                </StackPanel>
                <TextBlock
                    x:Name="VersionTxt"
                    HorizontalAlignment="Center"
                    d:Text="4.6.0.2503"
                    FontSize="11"
                    Text="{Binding Version}" />
                <Border
                    x:Name="UpdateBorder"
                    Margin="0 5"
                    Padding="5"
                    Background="{Binding BackgroundColor}"
                    CornerRadius="5">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <TextBlock
                            x:Name="UpdateIconTxt"
                            Margin="0 0 5 0"
                            VerticalAlignment="Center"
                            FontFamily="..\..\Fonts\#FluentSystemIcons-Regular"
                            FontSize="14"
                            Foreground="{Binding ForegroundColor}"
                            Text="{Binding StatusIcon}" />
                        <TextBlock
                            x:Name="UpdateTxt"
                            Grid.Column="1"
                            VerticalAlignment="Center"
                            d:Text="Status message here"
                            FontSize="11"
                            FontWeight="Bold"
                            Foreground="{Binding ForegroundColor}"
                            Text="{Binding StatusMessage}" />
                        <Button
                            x:Name="CheckUpdateBtn"
                            Grid.Column="2"
                            Padding="5 2"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            Background="Transparent"
                            BorderThickness="0"
                            Command="{Binding UpdateCommand}"
                            Content="{Binding CheckUpdateBtnContent}"
                            Cursor="Hand"
                            FontFamily="{Binding IconFont}"
                            FontSize="{Binding IconSize}"
                            FontWeight="{Binding FontWeight}"
                            Foreground="{Binding ForegroundColor}"
                            Style="{DynamicResource RegularButton}">
                            <Button.ToolTip>
                                <ToolTip Content="{x:Static lang:Resources.CheckForUpdates}" />
                            </Button.ToolTip>
                        </Button>
                    </Grid>
                </Border>
                <StackPanel
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Orientation="Horizontal">
                    <Button
                        x:Name="SeeLicensesBtn"
                        Padding="5"
                        HorizontalAlignment="Left"
                        Background="{x:Null}"
                        Command="{Binding LicensesCommand}"
                        Cursor="Hand"
                        FontSize="12"
                        FontWeight="ExtraBold"
                        Foreground="{DynamicResource Accent}"
                        Style="{DynamicResource RegularButton}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock
                                Margin="0 0 10 0"
                                VerticalAlignment="Center"
                                FontFamily="..\..\Fonts\#FluentSystemIcons-Regular"
                                FontWeight="Regular"
                                Text="&#xF583;" />
                            <TextBlock VerticalAlignment="Center" Text="{x:Static lang:Resources.SeeLicenses}" />
                        </StackPanel>
                    </Button>
                    <Button
                        x:Name="GitHubBtn"
                        Padding="5"
                        HorizontalAlignment="Left"
                        Background="{x:Null}"
                        Command="{Binding OpenRepoCommand}"
                        Cursor="Hand"
                        FontSize="12"
                        FontWeight="ExtraBold"
                        Foreground="{DynamicResource Accent}"
                        Style="{DynamicResource RegularButton}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock
                                Margin="0 0 10 0"
                                VerticalAlignment="Center"
                                FontFamily="..\..\Fonts\#FluentSystemIcons-Regular"
                                FontWeight="Regular"
                                Text="&#xF583;" />
                            <TextBlock VerticalAlignment="Center" Text="GitHub" />
                        </StackPanel>
                    </Button>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
