<UserControl
    x:Class="Gavilya.Components.ThemeSelector"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:local="clr-namespace:Gavilya.Components"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <i:Interaction.Triggers>
        <i:EventTrigger EventName="MouseLeftButtonUp">
            <i:InvokeCommandAction Command="{Binding ClickCommand}" />
        </i:EventTrigger>
    </i:Interaction.Triggers>
    <Border
        Width="100"
        Height="100"
        Margin="5"
        Padding="5"
        d:Background="{DynamicResource Background}"
        Background="{Binding Background}"
        BorderBrush="{DynamicResource Accent}"
        BorderThickness="{Binding BorderThickness}"
        CornerRadius="10"
        Cursor="Hand">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <Rectangle
                Grid.Row="0"
                Grid.ColumnSpan="4"
                Width="50"
                Height="10"
                Margin="2"
                HorizontalAlignment="Left"
                d:Fill="{DynamicResource Background2}"
                Fill="{Binding Background2}"
                RadiusX="5"
                RadiusY="5" />
            <Rectangle
                Grid.Row="1"
                Grid.ColumnSpan="4"
                Width="75"
                Height="10"
                Margin="2"
                HorizontalAlignment="Left"
                d:Fill="{DynamicResource Background2}"
                Fill="{Binding Background2}"
                RadiusX="5"
                RadiusY="5" />
            <Rectangle
                Grid.Row="2"
                Grid.ColumnSpan="4"
                Width="25"
                Height="10"
                Margin="2"
                HorizontalAlignment="Left"
                d:Fill="{DynamicResource Background2}"
                Fill="{Binding Background2}"
                RadiusX="5"
                RadiusY="5" />

            <Rectangle
                Grid.Row="4"
                Grid.Column="1"
                Width="20"
                Height="20"
                Margin="2 0"
                d:Fill="{DynamicResource PlayGradient}"
                Fill="{Binding PlayGradient}"
                RadiusX="25"
                RadiusY="25" />
            <Rectangle
                Grid.Row="4"
                Grid.Column="2"
                Width="20"
                Height="20"
                Margin="2 0"
                d:Fill="{DynamicResource PlayGradientHover}"
                Fill="{Binding PlayGradientHover}"
                RadiusX="25"
                RadiusY="25" />
            <Rectangle
                Grid.Row="4"
                Grid.Column="3"
                Width="20"
                Height="20"
                Margin="2 0"
                d:Fill="{DynamicResource GoldGradient}"
                Fill="{Binding GoldGradient}"
                RadiusX="25"
                RadiusY="25" />
        </Grid>
    </Border>
</UserControl>
